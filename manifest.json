{
  "manifest_version": 3,
  "name": "ChatGPT Message Navigator",
  "version": "1.1.0",
  "description": "Floating panel that lists your messages in the current ChatGPT conversation and lets you jump to them.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
